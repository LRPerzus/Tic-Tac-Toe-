@model TIc_Tac_Toe.Models.gameStats

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
          integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+JKT5Oe5s81f5JR8JGn437e7giD4w2Fb/v8voGqFsw2F1f76" crossorigin="anonymous">

    <!-- Add your custom CSS file here -->
    <link rel="stylesheet" href="/css/game.css">
</head>
<body>

    <!-- Heading -->
    <div class="container-fluid text-center">
        <h1 style="color: white;">TIC-TAC-TOE</h1>
    </div>
    <br>
    <br>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="PostGame" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group" style="display:none">
                    <label asp-for="player1_userid" class="control-label"></label>
                    <input asp-for="player1_userid" class="form-control" readonly value="@Context.Session.GetInt32("userId")"/>
                    <span asp-validation-for="player1_userid" class="text-danger"></span>
                </div>

                <div class="form-group" style="display:none">
                    <label asp-for="player2_userid" class="control-label"></label>
                    <input asp-for="player2_userid" class="form-control" readonly value="@Context.Session.GetInt32("userId")" />
                    <span asp-validation-for="player2_userid" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="moveNotation" class="control-label"></label>
                    <input id="moveNotation" asp-for="moveNotation" class="form-control" readonly />
                    <span asp-validation-for="moveNotation" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="winner" class="control-label"></label>
                    <input id="winner" asp-for="winner" class="form-control" readonly />
                    <span asp-validation-for="winner" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" value="Submit" class="btn btn-primary" id="submit">Submit Game Data</button>
                </div>
            </form>
        </div>
    </div>


    <div class="container-fluid text-center">
        <!-- Inform area for player's turn -->
        <h4 id="screen" style="color: white;">
            PLAYER 1 TURN
        </h4>
    </div>
    <br>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4"> </div>
            <div class="col-lg-4">
                <!-- Playing Canvas -->
                <center>
                    <table>
                        <tr>
                            <td colspan="3">
                        </tr>
                        <tr>
                            <td>
                                <button class="square" id="1"></button>
                            </td>
                            <td>
                                <button class="square" id="2"></button>
                            </td>
                            <td>
                                <button class="square" id="3"></button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <button class="square" id="4"></button>
                            </td>
                            <td>
                                <button class="square" id="5"></button>
                            </td>
                            <td>
                                <button class="square" id="6"></button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <button class="square" id="7"></button>
                            </td>
                            <td>
                                <button class="square" id="8"></button>
                            </td>
                            <td>
                                <button class="square" id="9"></button>
                            </td>
                        </tr>
                    </table>
                    <br>
                    <br>

                    <!-- Reset button for Game -->
                    <input type="button" class="reset btn btn-lg
                                                btn-danger btn-block"
                           value="RESET"
                           onClick="reset()" />
                </center>
            </div>
            <div class="col-lg-4"> </div>
        </div>
    </div>
</body>
<script src="/js/game.js"></script>

</html>